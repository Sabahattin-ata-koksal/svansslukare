static constexpr int turn {5};

void GameFunction(Eventfull* object){

    for (int i = 0; i < turn; ++i) {
        int EventResult = object->f;
        switch (EventResult) {
            case 1:
                object->EventAsteroidBelt(&object);
                break;
            case 2:
                object->EventAbandonedPlanet(&object);
                break;
            case 3:
                object->PiratesChoices(&object);
                break;
        }
    }
}
